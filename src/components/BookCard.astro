---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
}

const { title, description, image, link } = Astro.props;
---

<a href={link} class="project-card">
  <div class="image-container">
    <img src={image} alt={title} />
  </div>
  <div class="content">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</a>

<style>
    .project-card {
      display: flex;
      flex-direction: column;
      border-radius: 12px;
      overflow: hidden;
      background-color: var(--sl-color-gray-900);
      box-shadow: 0 3px 10px rgba(80, 80, 80, 0.4), 0 2px 4px rgba(80, 80, 80, 0.3);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      text-decoration: none;
      color: var(--sl-color-gray-200);
    }
  
    .project-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 6px 18px rgba(80, 80, 80, 0.5), 0 4px 8px rgba(80, 80, 80, 0.4);
    }
  
    .image-container {
      width: 100%;
      height: 220px;
      overflow: hidden;
      position: relative;
    }
  
    .image-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease, filter 0.3s ease;
    }
  
    .project-card:hover .image-container img {
      transform: scale(1.05);
      filter: brightness(1.1);
    }
  
    .content {
      padding: 1.25rem;
      background-color: var(--sl-color-gray-800);
    }
  
    h3 {
      margin: 0 0 0.6rem;
      font-size: 1.3rem;
      color: #a4d6d3; /* Soft teal */
      transition: color 0.3s ease;
    }
  
    p {
      margin: 0;
      font-size: 1rem;
      color: #A9A9A9; /* Pastel purple */
      line-height: 1.4;
      transition: color 0.3s ease;
      max-height: 120px;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  
    @media (min-width: 768px) {
      .project-card {
        flex-direction: row;
        align-items: flex-start;
        box-shadow: 0 5px 12px rgba(80, 80, 80, 0.35), 0 3px 6px rgba(80, 80, 80, 0.25);
      }
  
      .image-container {
        width: 240px;
        height: auto;
      }
  
      .content {
        padding: 1.5rem;
      }
    }
  </style>