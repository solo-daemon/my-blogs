---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
}

const { title, description, image, link } = Astro.props;
---

<a href={link} class="project-card">
  <div class="image-container">
    <img src={image} alt={title} />
    <div class="overlay">
      <h3>{title}</h3>
      <p>{description}</p>
      <span class="redirect-icon">➡️</span> <!-- Redirect sign -->
    </div>
  </div>
</a>

<style>
  .project-card {
    position: relative;
    display: block;
    width: 300px; /* Fixed width for uniformity */
    height: 400px; /* Fixed height for uniformity */
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    background-color: var(--sl-color-gray-900);
    box-shadow: 0 3px 10px rgba(80, 80, 80, 0.4), 0 2px 4px rgba(80, 80, 80, 0.3);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .image-container {
    position: relative;
    height: 100%;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .image-container:hover img {
    transform: scale(1.05);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent background for text visibility */
    color: #ffffff; /* White text for contrast */
    transition: opacity 0.3s ease;
    opacity: 0; /* Start hidden */
  }

  .project-card:hover .overlay {
    opacity: 1; /* Show overlay on hover */
  }

  h3 {
    margin: 0 0 0.5rem;
    font-size: 1.3rem;
  }

  p {
    margin: 0;
    font-size: 0.9rem;
    text-align: center; /* Center the text */
  }

  .redirect-icon {
    margin-top: 1rem;
    font-size: 1.5rem; /* Size for visibility */
    cursor: pointer; /* Indicate clickable */
  }

  @media (min-width: 768px) {
    .project-card {
      width: 320px; /* Slightly larger on wider screens */
      height: 420px;
    }
  }
</style>